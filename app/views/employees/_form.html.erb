<%= form_with(model: employee, local: true) do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, 'Name(input)' %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :department_id, 'Department name(select)' %>
    <%= form.select :department_id, Department.all.collect { |p| [ p.name, p.id ] } %>
  </div>

  <div class="field">
    <%= form.label :active, 'Active(checkbox)' %>
    <%= form.check_box :active, {}, "Yes", "No" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Employees</h1>

<table>
  <thead>
    <tr>
      <th class="th_color">ID</th>
      <th class="th_color">Name</th>
      <th class="th_color">Active</th>
      <th class="th_color">Department</th>
      <th colspan="2">Actons</th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.id %></td>
        <td><%= employee.name %></td>
        <td><%= employee.active %></td>
        <td><%= employee.department.name %></td>
        <td colspan="2">
          <%= link_to 'Edit', edit_employee_path(employee) %>
          <%= link_to 'Delete', employee, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @employees %>
<br>
<%= link_to 'New Employee', new_employee_path %>
<br>
<%= link_to 'Search employee', search_path %>
